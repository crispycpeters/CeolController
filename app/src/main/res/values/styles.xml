<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="android:Theme.Holo.Light">-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PowerButton">
        <item name="android:layout_gravity">center</item>
<!--
        <item name="android:layout_width">@dimen/av_button_size_minimum</item>
        <item name="android:layout_height">@dimen/av_button_size_minimum</item>
        <item name="android:layout_margin">@dimen/av_button_margin</item>
-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_redcircle_states</item>
    </style>
    <style name="WhiteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="DarkRectangleButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">@dimen/av_button_margin</item>
        <item name="android:background">@drawable/button_darkrectangle_states</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="DarkRectangleLongButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/av_button_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/button_darkrectangle_states</item>
<!--
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">5</item>
-->
        <item name="android:tint">@color/white</item>
    </style>
    <style name="WhiteRectangleButton">
        <item name="android:textColor">#000</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/av_button_margin</item>
        <item name="android:background">@drawable/button_whitecircle_states</item>
    </style>
    <style name="SIButton">
        <item name="android:textColor">#000</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_whitecircle_states</item>
        <item name="android:paddingStart">@dimen/av_button_margin_si</item>
        <item name="android:paddingEnd">@dimen/av_button_margin_si</item>
        <item name="android:maxWidth">@dimen/av_button_size_si</item>
        <item name="android:minWidth">@dimen/av_button_width_large</item>
    </style>
    <style name="SIButton.Small" parent="SIButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="DarkCircleButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_blackcircle_states</item>
        <item name="android:layout_margin">@dimen/av_button_margin</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="WhiteCircleButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:maxWidth">@dimen/av_button_size_maximum</item>
        <item name="android:maxHeight">@dimen/av_button_size_maximum</item>
        <item name="android:background">@drawable/button_whitecircle_states</item>
    </style>
    <style name="InfoCircleButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:maxWidth">@dimen/av_button_size_maximum</item>
        <item name="android:maxHeight">@dimen/av_button_size_maximum</item>
        <item name="android:background">@drawable/button_whitecircle_states</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TestButton">
        <item name="android:textColor">#000</item>
        <item name="android:layout_margin">2.5mm</item>
        <item name="android:minWidth">@dimen/av_button_size_maximum</item>
        <item name="android:minHeight">@dimen/av_button_size_maximum</item>
    </style>

    <style name="VolumeText.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="InfoLabel" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_margin">@dimen/av_button_margin</item>
    </style>
    <style name="InfoContent" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_margin">@dimen/av_button_margin</item>
        <item name="android:textColor">#00f</item>
    </style>

    <style name="VolumeText.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlbumArtText.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/imageOverlay</item>
    </style>

    <style name="AlbumArtPlayStatus.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#f9a616</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="SI.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlbumArtText.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/imageOverlay</item>
    </style>

    <style name="AlbumArtText.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/imageOverlay</item>
    </style>

    <style name="TunerNameText.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/imageOverlay</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
