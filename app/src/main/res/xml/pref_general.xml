    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <PreferenceCategory
        android:title="@string/pref_category_server"
        >
        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_device_server"
            android:inputType="textCapWords"
            android:key="@string/pref_key_device_server"
            android:summary="@string/pref_summary_device_server"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_device_server" />

        <CheckBoxPreference
            android:key="@string/pref_key_openhome_enable"
            android:title="@string/pref_title_openhome_enable"
            android:summary="@string/pref_openhome_enable"
            android:defaultValue="@bool/pref_default_openhome_enable"
            />

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_openhome_name"
            android:key="@string/pref_key_openhome_name"
            android:summary="@string/pref_summary_openhome_name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_openhome_name" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_macro"
        android:summary="@string/pref_summary_macro"
        >

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_macro1name"
            android:inputType="textCapWords"
            android:key="@string/pref_key_macro1name"
            android:maxLines="5"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:title="@string/pref_title_macro1name" />

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_macro1"
            android:inputType="textMultiLine"
            android:key="@string/pref_key_macro1"
            android:maxLines="30"
            android:minLines="5"
            android:lines="8"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:title="@string/pref_title_macro1" />

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_macro2name"
            android:inputType="textCapWords"
            android:key="@string/pref_key_macro2name"
            android:maxLines="5"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:title="@string/pref_title_macro2name" />

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_macro2"
            android:inputType="textCapWords"
            android:key="@string/pref_key_macro2"
            android:maxLines="5"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:title="@string/pref_title_macro2" />

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_macro3name"
            android:inputType="textCapWords"
            android:key="@string/pref_key_macro3name"
            android:maxLines="5"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:title="@string/pref_title_macro3name" />

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_macro3"
            android:inputType="textCapWords"
            android:key="@string/pref_key_macro3"
            android:maxLines="5"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:title="@string/pref_title_macro3" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_general"
        >

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_backgroundtimeoutsecs"
            android:inputType="number"
            android:key="@string/pref_key_backgroundtimeoutsecs"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:title="@string/pref_title_backgroundtimeoutsecs" />

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_backgroundratesecs"
            android:inputType="number"
            android:key="@string/pref_key_backgroundratesecs"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:title="@string/pref_title_backgroundratesecs" />

    </PreferenceCategory>

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
