<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.candkpeters.ceol.view.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title "/>
    <TextView
        android:id="@+id/track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:text="track "/>
    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track"
        android:text="artist "/>
    <TextView
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist"
        android:text="album "/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:columnCount="5"
        android:rowCount="6"
        android:layout_below="@+id/album"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/skipBackwardsB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|--"
            android:onClick="skipBackwards"
            android:layout_row="1"
            android:layout_column="1" />
        <Button
            android:id="@+id/playpauseB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-||"
            android:onClick="playPause"
            android:layout_row="1"
            android:layout_column="2" />
        <Button
            android:id="@+id/skipForwardsB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--|"
            android:onClick="skipForwards"
            android:layout_row="1"
            android:layout_column="3" />
        <Button
            android:id="@+id/fastBackwardsB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:onClick="skipBackwards"
            android:layout_row="2"
            android:layout_column="1" />
        <Button
            android:id="@+id/stopB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O"
            android:onClick="playPause"
            android:layout_row="2"
            android:layout_column="2" />
        <Button
            android:id="@+id/fastForwardsB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:onClick="skipForwards"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:id="@+id/performMacroB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macro"
            android:onClick="performMacro"
            android:layout_row="3"
            android:layout_column="1"
            android:singleLine="true" />

        <Button
            android:id="@+id/volumeupB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vol +"
            android:onClick="volumeUp"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:id="@+id/volumedownB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vol -"
            android:onClick="volumeDown"
            android:layout_row="4"
            android:layout_column="3" />


    </GridLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageV"
        android:layout_below="@+id/gridLayout"
        android:layout_marginTop="50dp" />



</RelativeLayout>
